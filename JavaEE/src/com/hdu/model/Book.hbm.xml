<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE 	hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN" "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.hdu.model.Book" table="book">
		<id name="isbn" column="b_isbn">
			<generator class="identity"></generator>
		</id>
		<property name="bookName"></property>
		<property name="author"></property>
		<property name="publisher"></property>
		<property name="price"></property>
		<property name="cnum"></property>
		<property name="snum"></property>
		<property name="summary"></property>
		<property name="lendTime"></property>
		<property name="returnTime"></property>
		
		
		<property name="name"></property>
		<property name="tel"></property>
		<property name="sex"></property>
		<property name="age"></property>
	</class>
</hibernate-mapping>